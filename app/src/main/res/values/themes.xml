<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VLR" parent="android:Theme.Material.Light.NoActionBar">
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">?background</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher_round</item>

        <item name="postSplashScreenTheme">@style/Theme.VLR</item>  # Required.
    </style>
</resources>
